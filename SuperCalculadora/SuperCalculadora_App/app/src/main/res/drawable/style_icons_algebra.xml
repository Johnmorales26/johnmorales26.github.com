<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="oval">
            <!--<solid android:color="@color/purple_500"/>-->
            <gradient
                android:startColor="@color/Rose_Madder"
                android:centerColor="@color/Cardinal"
                android:endColor="@color/Red_NCS"
                android:gradientRadius="100%p"
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.5"/>
            <stroke
                android:width="@dimen/button_stroke"
                android:color="@color/Persian_Plum"/>
            <size
                android:height="@dimen/button_size"
                android:width="@dimen/button_size"/>
            <padding
                android:top="@dimen/common_padding_min"
                android:bottom="@dimen/common_padding_min"
                android:left="@dimen/common_padding_min"
                android:right="@dimen/common_padding_min"/>

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            android:shape="oval">
            <!--<solid android:color="@color/purple_500"/>-->
            <gradient
                android:startColor="@color/Persian_Plum"
                android:centerColor="@color/Antique_Ruby"
                android:endColor="@color/Crimson_UA"
                android:gradientRadius="80%p"
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.5"/>
            <stroke
                android:width="@dimen/button_stroke"
                android:color="@color/Rose_Madder"/>
            <size
                android:height="@dimen/button_size"
                android:width="@dimen/button_size"/>
            <padding
                android:top="@dimen/common_padding_min"
                android:bottom="@dimen/common_padding_min"
                android:left="@dimen/common_padding_min"
                android:right="@dimen/common_padding_min"/>
        </shape>
    </item>
</selector>