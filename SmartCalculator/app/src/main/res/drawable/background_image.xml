<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="oval">
            <!--<solid android:color="@color/purple_500"/>-->
            <gradient
                android:startColor="@color/colorPrimaryLight"
                android:centerColor="@color/colorPrimary"
                android:endColor="@color/colorPrimaryDark"
                android:gradientRadius="100%p"
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.5"/>
            <stroke
                android:width="@dimen/form_stroke"
                android:color="@color/colorPrimaryDark"/>
            <size
                android:height="@dimen/form_size"
                android:width="@dimen/form_size"/>
            <padding
                android:top="@dimen/common_padding_min"
                android:bottom="@dimen/common_padding_min"
                android:left="@dimen/common_padding_min"
                android:right="@dimen/common_padding_min"/>

        </shape>
    </item>
</selector>