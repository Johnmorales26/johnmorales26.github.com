<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/common_padding_default"
    tools:context=".usecases.fragments.FragmentsFormulas.FormulasAlgebra.FormulasFractionFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeColor="@color/secondaryColor"
        app:strokeWidth="@dimen/border_cardview"
        android:layout_marginVertical="@dimen/common_padding_min"
        style="@style/Theme.SmartCalculator.CardView.Formulas">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvFormulaArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/formula_fraction"
                android:padding="@dimen/common_padding_min"
                style="@style/Theme.SmartCalculator.Common.HeadLine5"/>


            <io.github.kexanie.library.MathView
                android:id="@+id/formulaOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_padding_min"
                android:layout_gravity="center"
                app:engine="KaTeX"
                app:layout_constraintTop_toBottomOf="@id/tvFormulaArea"/>

            <io.github.kexanie.library.MathView
                android:id="@+id/formulaTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_padding_min"
                android:layout_gravity="center"
                app:engine="KaTeX"
                app:layout_constraintTop_toBottomOf="@id/tvFormulaArea"/>


            <io.github.kexanie.library.MathView
                android:id="@+id/formulaThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_padding_min"
                android:layout_gravity="center"
                app:engine="KaTeX"
                app:layout_constraintTop_toBottomOf="@id/tvFormulaArea"/>

            <io.github.kexanie.library.MathView
                android:id="@+id/formulaFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_padding_min"
                android:layout_gravity="center"
                app:engine="KaTeX"
                app:layout_constraintTop_toBottomOf="@id/tvFormulaArea"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>