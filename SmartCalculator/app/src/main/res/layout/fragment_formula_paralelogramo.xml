<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/common_padding_default"
    android:orientation="vertical"
    tools:context=".usecases.fragments.FragmentsFormulas.FormulasForms.FormulaParalelogramoFragment">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/figura_paralelogramo_formulas"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeColor="@color/secondaryColor"
        app:strokeWidth="@dimen/border_cardview"
        android:layout_marginVertical="@dimen/common_padding_min"
        style="@style/Theme.SmartCalculator.CardView.Formulas">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvFormulaArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_formula_area"
                android:padding="@dimen/common_padding_min"
                style="@style/Theme.SmartCalculator.Common.HeadLine5"/>


            <io.github.kexanie.library.MathView
                android:id="@+id/formulaArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_padding_min"
                android:layout_gravity="center"
                app:engine="KaTeX"
                app:layout_constraintTop_toBottomOf="@id/tvFormulaArea"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeColor="@color/secondaryColor"
        app:strokeWidth="@dimen/border_cardview"
        android:layout_marginVertical="@dimen/common_padding_min"
        style="@style/Theme.SmartCalculator.CardView.Formulas">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvFormulaPerimetro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_formula_perimetro"
                android:padding="@dimen/common_padding_min"
                style="@style/Theme.SmartCalculator.Common.HeadLine5"/>


            <io.github.kexanie.library.MathView
                android:id="@+id/formulaPerimetro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_margin="@dimen/common_padding_min"
                app:engine="KaTeX"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeColor="@color/secondaryColor"
        app:strokeWidth="@dimen/border_cardview"
        android:layout_marginVertical="@dimen/common_padding_min"
        style="@style/Theme.SmartCalculator.CardView.Formulas">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_other_formulas"
                android:padding="@dimen/common_padding_min"
                style="@style/Theme.SmartCalculator.Common.HeadLine5"/>

            <io.github.kexanie.library.MathView
                android:id="@+id/formulaOtherOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_padding_min"
                android:layout_gravity="center"
                app:engine="KaTeX"
                app:layout_constraintTop_toBottomOf="@id/tvFormulaArea"/>

            <io.github.kexanie.library.MathView
                android:id="@+id/formulaOtherTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_padding_min"
                android:layout_gravity="center"
                app:engine="KaTeX"
                app:layout_constraintTop_toBottomOf="@id/tvFormulaArea"/>

            <io.github.kexanie.library.MathView
                android:id="@+id/formulaOtherThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_padding_min"
                android:layout_gravity="center"
                app:engine="KaTeX"
                app:layout_constraintTop_toBottomOf="@id/tvFormulaArea"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>