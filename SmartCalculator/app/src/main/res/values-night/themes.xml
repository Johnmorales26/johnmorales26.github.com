<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--  Types  -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.SmartCalculator.Headline6</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.SmartCalculator.Headline5</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.SmartCalculator.Headline4</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.SmartCalculator.Headline3</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.SmartCalculator.Headline2</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.SmartCalculator.Headline1</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.SmartCalculator.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.SmartCalculator.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.SmartCalculator.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.SmartCalculator.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.SmartCalculator.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.SmartCalculator.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.SmartCalculator.Overline</item>

        <!--    Shape   -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SmartCalculator.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.SmartCalculator.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.SmartCalculator.LargeComponent</item>
    </style>

    <style name="Theme.SmartCalculator.CardView">
        <item name="android:backgroundTint">@color/surface</item>
        <item name="android:layout_margin">@dimen/common_padding_min</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Theme.SmartCalculator.CardView.Formulas">
        <item name="android:backgroundTint">@color/surface</item>
    </style>

    <style name="Theme.SmartCalculator.HeadLine6" parent="@style/TextAppearance.SmartCalculator.Headline6">
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="Theme.SmartCalculator.HeadLine5" parent="@style/TextAppearance.SmartCalculator.Headline5">
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Theme.SmartCalculator.HeadLine4" parent="@style/TextAppearance.SmartCalculator.Headline4">
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:letterSpacing">0.25</item>
    </style>

    <style name="Theme.SmartCalculator.HeadLine3" parent="@style/TextAppearance.SmartCalculator.Headline3">
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Theme.SmartCalculator.HeadLine2" parent="@style/TextAppearance.SmartCalculator.Headline2">
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:letterSpacing">-0.5</item>
    </style>

    <style name="Theme.SmartCalculator.HeadLine1" parent="@style/TextAppearance.SmartCalculator.Headline1">
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:letterSpacing">-1.5</item>
    </style>

    <style name="Theme.SmartCalculator.Subtitle1" parent="@style/TextAppearance.SmartCalculator.Subtitle1">
        <item name="android:textColor">@color/onBackground</item>
    </style>

    <style name="Theme.SmartCalculator.Subtitle2" parent="@style/TextAppearance.SmartCalculator.Subtitle2">
        <item name="android:textColor">@color/onBackground</item>
    </style>

    <style name="Theme.SmartCalculator.Body2" parent="@style/TextAppearance.SmartCalculator.Body2">
        <item name="android:textColor">@color/onBackground</item>
    </style>

    <style name="Theme.SmartCalculator.Body1" parent="@style/TextAppearance.SmartCalculator.Body1">
        <item name="android:textColor">@color/onBackground</item>
    </style>

    <style name="Theme.SmartCalculator.Button" parent="@style/TextAppearance.SmartCalculator.Button">
        <item name="android:textColor">@color/onBackground</item>
    </style>

    <style name="Theme.SmartCalculator.Caption" parent="@style/TextAppearance.SmartCalculator.Caption">
        <item name="android:textColor">@color/onBackground</item>
    </style>

    <style name="Theme.SmartCalculator.Overline" parent="@style/TextAppearance.SmartCalculator.Overline">
        <item name="android:textColor">@color/onBackground</item>
    </style>

    <!--(..................................Styles Onboarding......................................)-->
    <style name="Theme.SmartCalculator.Onboarding.Title" parent="Theme.SmartCalculator.HeadLine3">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.SmartCalculator.Onboarding.Description" parent="Theme.SmartCalculator.Body1">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>
    <!--(.........................................................................................)-->


    <!--(......................................Main Pages.........................................)-->
    <style name="Theme.SmartCalculator.MainPages.Title" parent="Theme.SmartCalculator.HeadLine5">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>
    <!--(.........................................................................................)-->

    <!--(.....................................Items Styles........................................)-->
    <style name="Theme.SmartCalculator.Item.Caption" parent="Theme.SmartCalculator.Caption">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Theme.SmartCalculator.Item.HeadLine6" parent="Theme.SmartCalculator.HeadLine6">
    </style>
    <style name="Theme.SmartCalculator.Item.HeadLine5" parent="Theme.SmartCalculator.HeadLine5">
    </style>
    <style name="Theme.SmartCalculator.Item.HeadLine3" parent="Theme.SmartCalculator.HeadLine3">
    </style>
    <style name="Theme.SmartCalculator.Item.Subtitle1" parent="Theme.SmartCalculator.Subtitle1">
    </style>
    <style name="Theme.SmartCalculator.Item.Subtitle2" parent="Theme.SmartCalculator.Subtitle2">
    </style>
    <style name="Theme.SmartCalculator.Item.Body1" parent="Theme.SmartCalculator.Body1">
    </style>
    <!--(.........................................................................................)-->

    <!--(....................................Bottom Options.......................................)-->
    <style name="Theme.SmartCalculator.Bottom.HeadLine6" parent="Theme.SmartCalculator.HeadLine6"/>
    <!--(.........................................................................................)-->

    <!--(...................................Common Fragments......................................)-->
    <style name="Theme.SmartCalculator.Common.HeadLine6" parent="Theme.SmartCalculator.HeadLine6"/>
    <style name="Theme.SmartCalculator.Common.HeadLine5" parent="Theme.SmartCalculator.HeadLine5"/>
    <style name="Theme.SmartCalculator.Common.HeadLine4" parent="Theme.SmartCalculator.HeadLine4"/>
    <style name="Theme.SmartCalculator.Common.HeadLine3" parent="Theme.SmartCalculator.HeadLine3"/>
    <style name="Theme.SmartCalculator.Common.HeadLine2" parent="Theme.SmartCalculator.HeadLine2"/>
    <style name="Theme.SmartCalculator.Common.HeadLine1" parent="Theme.SmartCalculator.HeadLine1"/>
    <style name="Theme.SmartCalculator.Common.Subtitle1" parent="Theme.SmartCalculator.Subtitle1"/>
    <style name="Theme.SmartCalculator.Common.Subtitle2" parent="Theme.SmartCalculator.Subtitle2">
        <item name="android:textColor">@color/secondaryDarkColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.SmartCalculator.Common.Body1" parent="Theme.SmartCalculator.Body1"/>
    <style name="Theme.SmartCalculator.Common.Body2" parent="Theme.SmartCalculator.Body2"/>
    <style name="Theme.SmartCalculator.Common.Button" parent="Theme.SmartCalculator.Button"/>
    <style name="Theme.SmartCalculator.Common.Caption" parent="Theme.SmartCalculator.Caption"/>
    <style name="Theme.SmartCalculator.Common.Overline" parent="Theme.SmartCalculator.Overline"/>
    <!--(.........................................................................................)-->

    <!--(...................................Theme Backgrouns Screens......................................)-->
    <style name="BackgroundScreens">
        <item name="android:background">@color/background</item>
    </style>
    <!--(.........................................................................................)-->

    <!--  Styles Formulas  -->
    <style name="FormulaContainer">
        <item name="backgroundTint">@color/error</item>
    </style>
    <!--  Styles Calculator  -->
    <style name="MyAppTitle">
        <item name="android:padding">@dimen/common_padding_min</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:layout_marginBottom">@dimen/common_padding_min</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:gravity">end</item>
    </style>
    <style name="MyTextViewHeadLine6">
        <item name="android:padding">@dimen/common_padding_min</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">48sp</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:background">@color/background</item>
        <item name="android:gravity">end</item>
    </style>
    <style name="MyTextViewHeadLine3">
        <item name="android:padding">@dimen/common_padding_min</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:layout_marginBottom">@dimen/common_padding_min</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:background">@color/background</item>
    </style>
    <style name="MyLinealLayout">
        <item name="android:orientation">horizontal</item>
        <item name="paddingEnd">@dimen/common_padding_min</item>
        <item name="layout_constraintDimensionRatio">H, 4:1</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>
    <style name="MyNumberButtons">
        <item name="android:textSize">@dimen/calc_btn_text_size</item>
        <item name="android:layout_marginStart">@dimen/common_padding_min</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>
    <style name="MyOperationButton">
        <item name="android:textSize">@dimen/calc_btn_text_size</item>
        <item name="android:layout_marginStart">@dimen/common_padding_min</item>
        <item name="android:backgroundTint">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:layout_marginEnd">@dimen/common_padding_min</item>
    </style>
    <style name="MyDeleteButton">
        <item name="android:text">@string/calc_btn_clear</item>
        <item name="android:textSize">@dimen/calc_btn_text_size</item>
        <item name="android:layout_marginStart">@dimen/common_padding_min</item>
        <item name="android:backgroundTint">@color/onSecondary</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:layout_marginEnd">@dimen/common_padding_min</item>
    </style>
    <style name="MyLLButtons">
        <item name="android:background">#424242</item>
    </style>

</resources>