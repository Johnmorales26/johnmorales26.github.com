<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDarkDarkMode</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryDarkDarkMode</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDarkDarkMode</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryDarkMode</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SmartCalculator.CardView">
        <item name="backgroundTint">@color/colorSurfaceDarkMode</item>
        <item name="android:layout_margin">@dimen/common_padding_min</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">@dimen/common_padding_nano</item>
        <item name="cornerRadius">@dimen/common_padding_min</item>
        <item name="cardElevation">@dimen/common_padding_micro</item>
    </style>

    <style name="Theme.SmartCalculator.CardView.Formulas">
        <item name="android:backgroundTint">@color/colorFormulas</item>
    </style>

</resources>