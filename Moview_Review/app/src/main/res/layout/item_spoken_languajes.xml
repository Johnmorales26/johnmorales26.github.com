<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/common_padding_min"
    style="@style/Theme.TMDB.CardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/common_padding_min">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvEnglishName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="Cantonese"
            style="@style/TextAppearance.TMDB.Subtitle1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginVertical="@dimen/common_padding_min"
            android:padding="@dimen/common_padding_nano"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="广州话 / 廣州話"
            style="@style/TextAppearance.TMDB.Subtitle1"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>