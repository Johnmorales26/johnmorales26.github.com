        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?backgroundColor</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/BG_dark</item>
        <item name="colorSurface">@color/color1_dark</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color2_dark</item>
        <item name="colorPrimaryVariant">@color/color3_dark</item>
        <item name="colorOnPrimary">@color/color4_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color5_dark</item>
