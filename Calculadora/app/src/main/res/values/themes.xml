<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?backgroundColor</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/BG_light</item>
        <item name="colorSurface">@color/color1_light</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color2_light</item>
        <item name="colorPrimaryVariant">@color/color3_light</item>
        <item name="colorOnPrimary">@color/color4_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color5_light</item>
        <!--  Shape  -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyTheme.SmallComponent</item>
    </style>

</resources>