<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="@dimen/common_padding_default"
    tools:context=".fragments.AlertDialogFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDialogInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_info"
        android:layout_margin="@dimen/common_padding_default"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDialogChooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_chooser"
        android:layout_margin="@dimen/common_padding_default"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDialogConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_confirm"
        android:layout_margin="@dimen/common_padding_default"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDialogFullscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_full_screen"
        android:layout_margin="@dimen/common_padding_default"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
</LinearLayout>